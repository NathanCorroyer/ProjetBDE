{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block stylesheets %}
    <style>
        .admin-background {
            background-image: url('/public/img/background.jpg'); /* Remplacez 'chemin/vers/votre/image.jpg' par le chemin de votre image */
            background-size: cover;
            background-position: center;
            position: relative;
        }

        .admin-background::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); /* Changez la valeur de l'opacité (dernier paramètre) selon vos préférences */
        }

        .admin-content {
            position: relative;
            z-index: 1;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid d-flex justify-content-center align-items-center" style="height: 80vh;">
        <div class="row justify-content-center">
            <div class="col-md-4 mb-4">
                <div class="card text-white bg-dark h-100">
                    <div class="card-body">
                        <h5 class="card-title"><i class="far fa-user"></i> Gérer les utilisateurs</h5>
                        <p class="card-text">Gérer les utilisateurs inscrits sur le site.</p>
                        <a href="{{ path('app_adminusers') }}" class="btn btn-primary">Accéder</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card text-white bg-dark h-100">
                    <div class="card-body">
                        <h5 class="card-title"><i class="fa-regular fa-clone"></i> Gérer les campus</h5>
                        <p class="card-text">Gérer les différents Campus du site.</p>
                        <a href="{{ path('app_admincampuses') }}" class="btn btn-primary">Accéder</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card text-white bg-dark h-100">
                    <div class="card-body">
                        <h5 class="card-title"><i class="fa-regular fa-building"></i> Gérer les villes</h5>
                        <p class="card-text">Gérer les différentes villes du site.</p>
                        <a href="{{ path('app_admincities') }}" class="btn btn-primary">Accéder</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
