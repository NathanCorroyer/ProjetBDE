{% extends 'base.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="{{ asset('scripts/dynamicActivityCreationForm.js') }}"></script>
{% endblock %}
{% block body %}
<div class="container-fluid custom-gradient-bg py-5">
    <div class="container" >
        <div class="row justify-content-center">
            <div class="col-md-6"  >
                <div class="card rounded-card" style="height: auto ; min-width: 600px; border-radius: 4px ; border-color: steelblue">
                    <div class="card-header bg-primary text-white">
                        <h1 class="text-center">Créer une sortie</h1>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                        {{ form_start(activityForm, {'attr': {'id': 'formulaireActivity'}}) }}
                            <div class="col">
                                <div class="mb-3">
                                {{ form_row(activityForm.name, {'label': 'Nom de la sortie', 'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="mb-3">
                                {{ form_row(activityForm.startingDateTime, {'label' : 'Date et heure de la sortie', 'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="mb-3">
                                {{ form_row(activityForm.inscriptionLimitDate, {'label' : 'Date limite d\'inscription', 'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="mb-3">
                                {{ form_row(activityForm.maxInscription, {'label' : 'Nombre de places', 'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="mb-3">
                                {{ form_row(activityForm.durationInMinutes, {'attr':
                                    {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="col">
                                <div class="mb-3">
                                    <label> Campus </label>
                                    <div class="form-control" >{{ app.user.campus.name }}</div>
                                </div>
                                <div class="mb-3">
                                </div>



                            </div>



                            <div class="mb-3">
                                {{ form_row(activityForm.description, {'label' : 'Description et info', 'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="mb-3">
                                {{ form_row(activityForm.city) }}
                            </div>

                            <div class="mb-3">
                                {{ form_row(activityForm.place) }}
                            </div>

                            <div class="grid">
                                <div class="row">
                                    <div class="col text-center">  {#Utilisation de la classe Bootstrap pour centrer le bouton#}
                                        {{ form_row(activityForm.save) }}
                                    </div>
                                    <div class="col text-center">  {#Utilisation de la classe Bootstrap pour centrer le bouton#}
                                        {{ form_row(activityForm.publish) }}
                                    </div>
                                    <div class="col text-center">  {#Utilisation de la classe Bootstrap pour centrer le bouton#}
                                        <button type="submit" class="btn btn-secondary" style="margin-top: 10%"
                                                onclick="redirectToHomePage()"
                                        >Retour à la liste</button>
                                    </div>
                            </div>

        {{ form_end(activityForm) }}

            </div>
            </div>
    </div>
{% endblock %}

{% block title %}

{% endblock %}
