{% extends 'base.html.twig' %}

{% block title %}Ajouter une ville{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card bg-dark text-white"> {# Ajout de la classe text-white pour le texte en blanc #}
                    <div class="card-header text-center">
                        <h2 class="card-title">Ajouter une ville</h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'form'}}) }}
                        <div class="form-group">
                            {{ form_label(form.name, 'Nom de la ville', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.zipcode, 'Code postal', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.zipcode, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="text-center">
                            {{ form_end(form) }}
                            <div class="mt-3">
                                <a href="{{ path('app_admincities') }}" class="btn btn-secondary">Retour</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
