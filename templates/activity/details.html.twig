{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid custom-gradient-bg py-5">
    <div class="container text-center">
        <div class="card rounded-card" style="height: auto ; min-width: 200px; border-radius: 4px ; border-color: steelblue">
            <div class="card-header bg-primary text-white">
                <h1>Afficher une sortie</h1>
            </div>

        <div id="affichersortie"class="container text-center">
            <div class="card-body">
                <div class="row row-cols-2">
                    <div class="col"><label>Nom de la sortie</label>
                        <div class="form-control">{{ activity.name }}</div>
                    </div>
                    <div class="col"><label>Campus</label>
                        <div class="form-control">{{ activity.campus.name }}</div>
                    </div>
                    <div class="col"><label>Date et heure de la sortie</label>
                        <div class="form-control">{{ activity.startingDateTime | format_datetime(pattern='yyyy-MM-dd HH:mm' , locale="fr" ) }}</div></div>
                    <div class="col"><label>Ville</label>
                        <div class="form-control">{{ activity.place.city.name }}</div>
                    </div>
                    <div class="col"><label>Date limite d'inscription</label>
                        <div class="form-control">{{ activity.inscriptionLimitDate | format_datetime(pattern='yyyy-MM-dd HH:mm' , locale="fr" ) }}</div></div>
                    <div class="col"><label>Lieu</label>
                        <div class="form-control">{{ activity.place.name }}</div>
                    </div>
                    <div class="col"><label>Nombre de places</label>
                        <div class="form-control">{{ activity.maxInscription }}</div>
                    </div>
                    <div class="col"><label>Rue</label>
                        <div class="form-control">{{ activity.place.adress }}</div>
                    </div>
                    <div class="col"><label>Durée (en minutes)</label>
                        <div class="form-control">{{ activity.duration | format_datetime(pattern='HH:mm' , locale="fr" ) }}</div>
                    </div>
                    <div class="col"><label>Latite / Longitude</label>
                            <div class="form-control">{{ activity.place.latitude }} / {{ activity.place.longitude }}</div>
                    </div>
                </div>
            </div>

            <div class="card-body" >
                <div><p>Description : </p><div class="form-control" style="height:auto" >{{ activity.description }}</div></div>
            </div>



        </div>


    </div>

        <div class="card-header bg-primary text-white " >
            <h1 style="font-size: 1.3rem">Organisateur de l'activité</h1>
        </div>
        <table class="table borderCards">
            <thead class="bg-light">
            <tr>
                <th>Nom / Prénom : </th>
                <th>E-mail :</th>
            </tr>
            </thead>
            <tbody>
                <tr style="background-color: white;">
                    <td>
                        <a href="{{ path('user_profile' , {'id' : activity.planner.id} ) }}">
                            {{ activity.planner.firstName }}  {{ activity.planner.lastName }}
                        </a>
                    </td>

                    <td>
                        {{ activity.planner.email }}
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="card-header bg-primary text-white" >
            <h1 style="font-size: 1.3rem">Liste des particpants inscrits</h1>
        </div>
            <table class="table borderCards">
                <thead class="bg-light">
                <tr>
                    <th>Nom / Prénom : </th>
                    <th>E-mail :</th>
                </tr>
                </thead>
                <tbody>
                {% for user in activity.users %}

                    <tr style="background-color: white;">
                        <td>
                            <a href="{{ path('user_profile' , {'id' : user.id } ) }}">
                                {{ user.firstName }}  {{ user.lastName }}
                            </a>
                        </td>

                        <td>
                            {{ user.email }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

    </div>
</div>

{% endblock %}



{% block title %}
Sortir.com | Details Activity
{% endblock %}

